@model UserVM
@{
    ViewData["Title"] = "Register Page";
}

<form asp-action="Register" asp-controller="Account" class="mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center text-white rounded-top-3 bg-gradient" style="background-color:#ea39b8;">
                    <h3>Register</h3>
                </div>
                <div class="card-body p-4">
                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="form-label mt-4"></label>
                        <input type="text" class="form-control rounded-3" asp-for="UserName" placeholder="User Name">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label mt-4"></label>
                        <input type="password" class="form-control rounded-3" asp-for="Password" placeholder="Password" autocomplete="off">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label mt-4"></label>
                        <input type="password" class="form-control rounded-3" asp-for="ConfirmPassword" placeholder="Confirm Password" autocomplete="off">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label mt-4"></label>
                        <input type="text" class="form-control rounded-3" asp-for="Address" placeholder="Address">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2">Register</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
