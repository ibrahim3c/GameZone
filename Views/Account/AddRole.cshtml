@model RoleVM;
@{
    ViewData["Title"] = "Add Role";
}

<h5 class="mt-4">
    <i class="bi bi-plus-circle-dotted"></i>
    Add A New Role
</h5>

<form asp-action="AddRole" asp-controller="Account">
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Role" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Role" placeholder="Enter Role">
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Add</button>
        </div>
    </div>
       



</form>